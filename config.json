{
  "log": {
    "level": "info",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "type": "quic",
        "tag": "dns-local",
        "server": "223.5.5.5"
      },
      {
        "type": "h3",
        "tag": "dns-remote",
        "domain_resolver": "dns-local",
        "server": "dns.google.com"
      },
      {
        "type": "fakeip",
        "tag": "fakeip",
        "inet4_range": "172.20.0.1/16",
        "inet6_range": "fc00::/18"
      }
    ],
    "rules": [
      {
        "source_ip_is_private": true,
        "server": "dns-local"
      },
      {
        "rule_set": "category-ads-all",
        "action": "reject"
      },
      {
        "clash_mode": "direct",
        "server": "dns-local"
      },
      {
        "clash_mode": "global",
        "server": "dns-remote"
      },
      {
        "query_type": [
          "A",
          "AAAA"
        ],
        "server": "fakeip"
      }
    ],
    "strategy": "ipv4_only",
    "independent_cache": true
  },
  "inbounds": [
    {
      "type": "tproxy",
      "tag": "tproxy-in",
      "listen": "::",
      "listen_port": 1536,
      "network": "tcp,udp",
      "sniff": true
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "Direct"
    },
    {
      "type": "direct",
      "tag": "Proxy"
    }
  ],
  "route": {
    "rules": [
      {
        "action": "sniff"
      },
      {
        "type": "logical",
        "mode": "or",
        "rules": [
          {
            "port": 53
          },
          {
            "protocol": "dns"
          }
        ],
        "action": "hijack-dns"
      },
      {
        "clash_mode": "direct",
        "outbound": "Direct"
      },
      {
        "clash_mode": "global",
        "outbound": "Proxy"
      },
      {
        "rule_set": "category-ads-all",
        "action": "reject"
      },
      {
        "ip_is_private": true,
        "rule_set": [
          "private",
          "private-ip"
        ],
        "outbound": "Direct"
      }
    ],
    "rule_set": [
      {
        "type": "remote",
        "tag": "category-ads-all",
        "url": "https://cdn.jsdelivr.net/gh/MetaCubeX/meta-rules-dat@sing/geo/geosite/category-ads-all.srs"
      }
    ],
    "auto_detect_interface": true,
    "default_domain_resolver": "dns-local"
  },
  "experimental": {
    "cache_file": {
      "enabled": true,
      "store_fakeip": true,
      "store_rdrc": true
    },
    "clash_api": {
      "external_controller": "[::]:9090",
      "access_control_allow_origin": "https://board.zash.run.place",
      "access_control_allow_private_network": true
    }
  }
}